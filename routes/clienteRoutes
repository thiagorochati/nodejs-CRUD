const express = require("express");
const router = express.Router();
const clienteController = require("../controllers/clienteController");

const authMiddleware = require("../middlewares/authMiddleware");

router.get("/clientes", authMiddleware, clienteController.index);
router.get("/clientes/new", authMiddleware, clienteController.new);
router.post("/clientes", authMiddleware, clienteController.save);
router.get("/clientes/edit/:id", authMiddleware, clienteController.edit);
router.post("/clientes/update/:id", authMiddleware, clienteController.update);
router.get("/clientes/delete/:id", authMiddleware, clienteController.delete);

module.exports = router;

